# =========================================================================
# AgriSense Pro - Environment Variables
# Copy this file to .env and fill in your values
# =========================================================================

# -------------------------------------------------------------------------
# APPLICATION SETTINGS
# -------------------------------------------------------------------------
APP_NAME=AgriSense Pro
DEBUG=true
ENVIRONMENT=development
# Set to 'production' for production deployment

# -------------------------------------------------------------------------
# SERVER SETTINGS
# -------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -------------------------------------------------------------------------
# DATABASE (PostgreSQL for production, SQLite for development)
# -------------------------------------------------------------------------
# PostgreSQL connection string (uncomment and configure for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/agrisense_db

# Use SQLite for local development (set to false for PostgreSQL)
USE_SQLITE=true
SQLITE_PATH=./agrisense.db

# -------------------------------------------------------------------------
# SECURITY (CRITICAL - CHANGE THESE IN PRODUCTION!)
# -------------------------------------------------------------------------
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-64-characters

# JWT Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Bcrypt rounds for password hashing (12 is secure, increase for more security)
BCRYPT_ROUNDS=12

# -------------------------------------------------------------------------
# CORS SETTINGS (Comma-separated list of allowed origins)
# -------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5060,http://127.0.0.1:3000,http://127.0.0.1:8000

# Add production domains here (comma-separated)
EXTRA_CORS_ORIGINS=

# -------------------------------------------------------------------------
# EXTERNAL API KEYS (Free Tier - Get your own keys)
# -------------------------------------------------------------------------

# Weather API - OpenWeatherMap (Free: 1000 calls/day)
# Sign up: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_key

# Alternative Weather API - WeatherAPI.com (Free: 1M calls/month)
# Sign up: https://www.weatherapi.com/
WEATHERAPI_KEY=your_weatherapi_key

# Maps - Mapbox (Free: 50K loads/month)
# Sign up: https://www.mapbox.com/
MAPBOX_API_KEY=your_mapbox_key

# AI/ML - Hugging Face Inference API (Free tier)
# Sign up: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_key

# Google Gemini API (Free tier: 60 requests/minute)
# Sign up: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_key

# SMS - Twilio (Free trial with credits)
# Sign up: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Email - SendGrid (Free: 100 emails/day)
# Sign up: https://signup.sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_key
FROM_EMAIL=noreply@agrisensepro.com

# Market Data - data.gov.in (Free, registration required)
# Sign up: https://data.gov.in/
DATA_GOV_IN_API_KEY=your_data_gov_key

# Image Storage - Cloudinary (Free: 25K transformations/month)
# Sign up: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Push Notifications - Firebase Cloud Messaging (Free)
# Setup: https://console.firebase.google.com/
FCM_SERVER_KEY=your_fcm_key

# -------------------------------------------------------------------------
# RATE LIMITING
# -------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -------------------------------------------------------------------------
# FILE UPLOADS
# -------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# -------------------------------------------------------------------------
# CACHING
# -------------------------------------------------------------------------
CACHE_TTL_SECONDS=300
WEATHER_CACHE_TTL=1800
PRICE_CACHE_TTL=3600

# -------------------------------------------------------------------------
# LOGGING
# -------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/agrisense.log
